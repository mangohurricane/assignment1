<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yzhang8.travel.MainActivity" >

    <Button
        android:id="@+id/additembutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:onClick="addnewclaim"
        android:text="add" />

    <ListView
        android:id="@+id/claimlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/additembutton"
        android:layout_below="@+id/button1"
        android:layout_marginBottom="16dp" >

    </ListView>

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/claimlistview"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/claimlistview"
        android:layout_marginTop="16dp"
        android:onClick="sendemail"
        android:text="Send Claim Email" />

</RelativeLayout>
